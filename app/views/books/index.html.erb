<h1>Books</h1>
<table>
 <thead>
 <tr>
 <th align="center">Title</th>
 <th align="center">Body</th>
 </tr>
 </thead> 

<tbody>
<% @books.each do |book| %>
 <tr>
  <td class="title2"><%= book.title %></td>
  <td class="body2"><%= book.body %></td>
  <td class="show"><%= link_to "Show", "/books/#{book.id}" %></td>
  <td class="edit"><%= link_to "Edit", "/books/#{book.id}/edit" %></td>
  <td class="destroy"><%= link_to "Destroy", "/books/#{book.id}", method: :delete, "data-confirm" => "Are you sure?" %></td>
 </tr> 
<% end %>
</tbody>
</table>

<h2>New Book</h2>

<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book, url: '/books', method: :post do |f| %>


  <h5>Title</h5>
  <%= f.text_field :title %>
	
  <h5>body</h5>
  <%= f.text_area :body %></br>
	
  <%= f.submit 'Create Book' %>
  
<% end %> 

